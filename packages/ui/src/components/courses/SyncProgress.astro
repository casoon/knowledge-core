---
/**
 * SyncProgress - Cloud synchronization for learning progress
 *
 * Enables syncing progress between devices
 * via an 8-character code (valid for 30 days).
 */
---

<div class="sync-progress">
  <button
    type="button"
    id="sync-button"
    class="flex items-center gap-2 px-3 py-2 text-sm text-text-muted bg-surface-alt border border-border rounded-lg hover:border-primary/50 hover:text-text transition-all"
    aria-label="Sync progress"
  >
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"
      ></path>
    </svg>
    <span class="hidden sm:inline">Sync</span>
  </button>
</div>

<!-- Sync Modal -->
<div
  id="sync-modal"
  class="fixed inset-0 z-modal hidden"
  role="dialog"
  aria-modal="true"
  aria-label="Sync progress"
>
  <div id="sync-backdrop" class="absolute inset-0 bg-black/50 backdrop-blur-sm">
  </div>

  <div class="relative flex items-center justify-center min-h-screen p-4">
    <div
      class="w-full max-w-md bg-surface border border-border rounded-xl shadow-2xl overflow-hidden"
    >
      <!-- Header -->
      <div
        class="flex items-center justify-between px-4 py-3 border-b border-border"
      >
        <h2 class="text-lg font-semibold text-text">Sync Progress</h2>
        <button
          type="button"
          id="sync-close"
          class="p-1 text-text-muted hover:text-text transition-colors"
        >
          <svg
            class="w-5 h-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>

      <!-- Content -->
      <div class="p-4">
        <!-- Status: Kein Sync aktiv -->
        <div id="sync-status-none" class="space-y-4">
          <p class="text-sm text-text-muted">
            Sync your learning progress between different devices.
          </p>

          <div class="grid gap-3">
            <button
              type="button"
              id="sync-create"
              class="btn btn-primary w-full justify-center"
            >
              <svg
                class="w-4 h-4 mr-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 4v16m8-8H4"></path>
              </svg>
              Create New Sync Code
            </button>

            <div class="relative">
              <div class="absolute inset-0 flex items-center">
                <div class="w-full border-t border-border"></div>
              </div>
              <div class="relative flex justify-center text-xs">
                <span class="px-2 bg-surface text-text-muted">or</span>
              </div>
            </div>

            <div class="space-y-2">
              <label for="sync-code-input" class="text-sm font-medium text-text"
                >Enter code</label
              >
              <div class="flex gap-2">
                <input
                  type="text"
                  id="sync-code-input"
                  class="flex-1 px-3 py-2 text-center font-mono text-lg uppercase tracking-wider bg-surface-alt border border-border rounded-lg focus:border-primary focus:outline-none"
                  placeholder="XXXXXXXX"
                  maxlength="8"
                  autocomplete="off"
                  autocorrect="off"
                  autocapitalize="characters"
                  spellcheck="false"
                />
                <button
                  type="button"
                  id="sync-load"
                  class="btn btn-secondary px-4"
                >
                  Load
                </button>
              </div>
            </div>
          </div>
        </div>

        <!-- Status: Sync aktiv -->
        <div id="sync-status-active" class="hidden space-y-4">
          <div class="p-4 bg-primary/10 border border-primary/20 rounded-lg">
            <p class="text-xs text-text-muted mb-1">Your Sync Code</p>
            <div class="flex items-center justify-between">
              <code
                id="sync-code-display"
                class="text-2xl font-mono font-bold text-primary tracking-wider"
              ></code>
              <button
                type="button"
                id="sync-copy"
                class="p-2 text-text-muted hover:text-primary transition-colors"
                title="Copy code"
              >
                <svg
                  class="w-5 h-5"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"
                  ></path>
                </svg>
              </button>
            </div>
            <p class="text-xs text-text-muted mt-2">
              Valid for 30 days. Enter this code on another device.
            </p>
          </div>

          <div class="flex items-center justify-between text-sm">
            <span class="text-text-muted">Last synced:</span>
            <span id="sync-last-updated" class="text-text"></span>
          </div>

          <div class="grid gap-2">
            <button
              type="button"
              id="sync-save-now"
              class="btn btn-primary w-full justify-center"
            >
              <svg
                class="w-4 h-4 mr-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"
                ></path>
              </svg>
              Sync Now
            </button>
            <button
              type="button"
              id="sync-disconnect"
              class="btn btn-ghost w-full justify-center text-red-500 hover:bg-red-500/10"
            >
              Disconnect Sync
            </button>
          </div>
        </div>

        <!-- Loading State -->
        <div id="sync-loading" class="hidden py-8 text-center">
          <svg
            class="w-8 h-8 mx-auto text-primary animate-spin"
            fill="none"
            viewBox="0 0 24 24"
          >
            <circle
              class="opacity-25"
              cx="12"
              cy="12"
              r="10"
              stroke="currentColor"
              stroke-width="4"></circle>
            <path
              class="opacity-75"
              fill="currentColor"
              d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
            ></path>
          </svg>
          <p class="mt-2 text-sm text-text-muted">Loading...</p>
        </div>

        <!-- Error State -->
        <div
          id="sync-error"
          class="hidden p-4 bg-red-500/10 border border-red-500/20 rounded-lg"
        >
          <p id="sync-error-message" class="text-sm text-red-500"></p>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  import { initSyncManager } from "../../scripts/sync-manager";
  initSyncManager();
</script>
