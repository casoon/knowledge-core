{
  "name": "knowledge-core",
  "version": "0.1.0",
  "private": true,
  "description": "Monorepo template for documentation and course platforms",
  "scripts": {
    "dev": "pnpm --filter \"./apps/**\" --parallel dev",
    "dev:docs": "pnpm --filter docs dev",
    "dev:courses": "pnpm --filter courses dev",
    "build": "pnpm --filter \"./packages/**\" build && pnpm --filter \"./apps/**\" build",
    "build:docs": "pnpm --filter docs build",
    "build:courses": "pnpm --filter courses build",
    "preview": "pnpm --filter \"./apps/**\" preview",
    "preview:docs": "pnpm --filter docs preview",
    "preview:courses": "pnpm --filter courses preview",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "pnpm --filter \"./apps/**\" astro check",
    "clean": "pnpm --filter \"./apps/**\" --filter \"./packages/**\" clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "typescript": "^5.6.3"
  },
  "volta": {
    "node": "24.0.0",
    "pnpm": "9.14.4"
  },
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.14.4"
}
